<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F2C7"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout="@android:layout/simple_gallery_item" />

    <Button
        android:id="@+id/btn_hibrido"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="465dp"
        android:backgroundTint="#B6ABAB"
        android:onClick="onClickHibrido"
        android:radius="20dip"
        android:text="Hibrido"
        android:textColor="#000000"
        android:textSize="9sp"
        android:textStyle="bold"
        tools:ignore="SmallSp"></Button>

    <Button
        android:id="@+id/btn_normal"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="297dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:backgroundTint="#B6ABAB"
        android:onClick="onClickNormal"
        android:text="Normal"
        android:textColor="#000000"
        android:textSize="9sp"
        android:textStyle="bold"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/btn_satelite"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="526dp"
        android:backgroundTint="#B6ABAB"
        android:onClick="onClickSatelite"
        android:text="Satelite"
        android:textColor="#000000"
        android:textSize="9sp"
        android:textStyle="bold"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/btn_terreno"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#B6ABAB"
        android:onClick="onClickTerrenal"
        android:text="Terreno"
        android:textColor="#000000"
        android:textSize="9sp"
        android:textStyle="bold" />

</RelativeLayout>